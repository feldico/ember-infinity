<p class="demo-extended-paragraph">Quantity: {{this.model.length}}</p>

<div class="demo-list-items list-items" id="scrollablecontent">
  <h2>Posts container</h2>
  <ul>
    {{#each this.model as |post|}}
      <li><p class="demo-list-paragraph">{{post.name}}</p></li>
    {{/each}}
    <InfinityLoader
      class="infinity-loader-bottom"
      @scrollable="#scrollablecontent"
      @infinityModel={{this.model}}
    />
  </ul>
</div>